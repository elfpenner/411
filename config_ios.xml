 <widget id="nl.deville-internet.app" version="1.0.0">
        <name>Testapp</name>
        <description>Een testapp om te testen wat allemaal mogelijk is</description>
        <author email="info@deville-internet.nl" href="http://www.deville-internet.nl">de Ville Internet</author>
        <content src="index.html" />
        <access origin="*" />
        <access origin="http://www.deville-internet.nl/*" launch-external="yes" />
	<platform name="ios">
              <feature name="InAppBrowser">
                <param name="ios-package" value="CDVInAppBrowser" />
              </feature>
	 </platform>
	<platform name="android">
          <feature name="InAppBrowser">
  	     <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
	  </feature>
	      <preference name="android-minSdkVersion" value="10" />
         </platform>
	<preference name="orientation" value="portrait" />
        <preference name="Fullscreen" value="false" />
        <preference name="permissions" value="none"/>
         <icon src="icon.png"   />
         <icon src="icon-60@3x.png" gap:platform="ios" width="180" height="180" />

	<!-- ios7 iPhone / iPod Touch  -->
         <icon src="icon-60.png" gap:platform="ios" width="60" height="60" />
         <icon src="icon-60@2x.png" gap:platform="ios" width="120" height="120" />

	<!-- iPad -->
	 <icon src="icon-76.png" gap:platform="ios" width="76" height="76" />
	 <icon src="icon-76@2x.png" gap:platform="ios" width="152" height="152" />
	
	<!-- Settings Icon -->
	 <icon src="icon-29.png" gap:platform="ios" width="29" height="29" />
	 <icon src="icon-29@2x.png" gap:platform="ios" width="58" height="58" />

	<!-- Spotlight Icon -->
	 <icon src="icon-40.png" gap:platform="ios" width="40" height="40" />
	 <icon src="icon-40@2x.png" gap:platform="ios" width="80" height="80" />
	 <icon src="icon.png" gap:platform="ios" width="57" height="57" />
	 <icon src="icon@2x.png" gap:platform="ios" width="114" height="114" />
	
	<!-- iPad -->
	 <icon src="icon-72.png" gap:platform="ios" width="72" height="72" />
	 <icon src="icon-72@2x.png" gap:platform="ios" width="144" height="144" />


	<!-- iPad Spotlight and Settings Icon -->
	 <icon src="icon-50.png" gap:platform="ios" width="50" height="50" />
	 <icon src="icon-50@2x.png" gap:platform="ios" width="100" height="100" />
<!-- Android -->
	 <icon src="res/icon/android/icon.png" gap:platform="android" gap:qualifier="ldpi" />
	 <icon src="res/icon/android/icon.png" gap:platform="android" gap:qualifier="mdpi" />
	 <icon src="res/icon/android/icon.png" gap:platform="android" gap:qualifier="hdpi" />
	 <icon src="res/icon/android/icon.png" gap:platform="android" gap:qualifier="xhdpi" />
	 <icon src="res/icon/android/icon.png" gap:platform="android" gap:qualifier="xxhdpi" />
	 <icon src="res/icon/android/icon.png" gap:platform="android" gap:qualifier="fr-xxhdpi" />

	<preference name="BackgroundColor" value="0xff7ab030"/>
	
    </widget>